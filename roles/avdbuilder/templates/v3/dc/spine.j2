{# Render Spines #}
spine:
  defaults: {{ dc_data.spine_defaults }}
  nodes:
{% for spine in dc_data.spines %}
{%     if spine.site.name == dc_data.site_name %}
    {{ spine.name }}:
      evpn_role: {{ spine.cf_evpn_role }}
      id: {{ spine.cf_device_id }}
      mgmt_ip: {{ spine.primary_ip4.address }}
{%     endif %}
{% endfor %}


